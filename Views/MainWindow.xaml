                        </Border>

                        <!-- Health Stat -->
                        <Border x:Name="HealthStatPanel"
                                Margin="0,2" 
                                BorderBrush="#E0E0E0" 
                                BorderThickness="1" 
                                Padding="6">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="ðŸŒ¿" FontSize="14" Margin="0,0,4,0" VerticalAlignment="Center"/>
                                <TextBlock Grid.Column="1" Text="Health" Foreground="Gray" FontSize="11" FontWeight="SemiBold" VerticalAlignment="Center"/>
                                <TextBlock Grid.Column="2" 
                                       Text="{Binding Bonsai.Health, StringFormat={}{0}%}" 
                                       FontWeight="Bold"
                                       FontSize="11"
                                       Margin="0,0"/>

                                <ProgressBar x:Name="HealthProgressBar"
                                         Grid.ColumnSpan="3"
                                         VerticalAlignment="Bottom"
                                         Value="{Binding Bonsai.Health}" 
                                         Foreground="#4CAF50" 
                                         Maximum="100" 
                                         Height="6"
                                         Margin="0,18,0,0"/>
                            </Grid>
                        </Border>

                        <!-- Energy Stat -->
                        <Border x:Name="EnergyStatPanel"
                                Margin="0,2" 
                                BorderBrush="#E0E0E0" 
                                BorderThickness="1" 
                                Padding="6">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="âœ¨" FontSize="14" Margin="0,0,4,0" VerticalAlignment="Center"/>
                                <TextBlock Grid.Column="1" Text="Energy" Foreground="Gray" FontSize="11" FontWeight="SemiBold" VerticalAlignment="Center"/>
                                <TextBlock Grid.Column="2" 
                                       Text="{Binding Bonsai.Energy, StringFormat={}{0}%}" 
                                       FontWeight="Bold"
                                       FontSize="11"
                                       Margin="0,0"/>

                                <ProgressBar x:Name="EnergyProgressBar"
                                         Grid.ColumnSpan="3"
                                         VerticalAlignment="Bottom"
                                         Value="{Binding Bonsai.Energy}" 
                                         Foreground="#FF5722" 
                                         Maximum="100" 
                                         Height="6"
                                         Margin="0,18,0,0"/>
                            </Grid>
                        </Border>

                        <!-- Hunger Stat -->
                        <Border x:Name="HungerStatPanel"
                                Margin="0,2" 
                                BorderBrush="#E0E0E0" 
                                BorderThickness="1" 
                                Padding="6">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="ðŸ”" FontSize="14" Margin="0,0,4,0" VerticalAlignment="Center"/>
                                <TextBlock Grid.Column="1" Text="Hunger" Foreground="Gray" FontSize="11" FontWeight="SemiBold" VerticalAlignment="Center"/>
                                <TextBlock Grid.Column="2" 
                                       Text="{Binding Bonsai.Hunger, StringFormat={}{0}%}" 
                                       FontWeight="Bold"
                                       FontSize="11"
                                       Margin="0,0"/>

                                <ProgressBar x:Name="HungerProgressBar"
                                         Grid.ColumnSpan="3"
                                         VerticalAlignment="Bottom"
                                         Value="{Binding Bonsai.Hunger}" 
                                         Foreground="#8D6E63" 
                                         Maximum="100" 
                                         Height="6"
                                         Margin="0,18,0,0"/>
                            </Grid>
                        </Border>

                        <!-- Cleanliness Stat -->
                        <Border x:Name="CleanlinessStatPanel"
                                Margin="0,2" 
                                BorderBrush="#E0E0E0" 
                                BorderThickness="1" 
                                Padding="6">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="ðŸ§¹" FontSize="14" Margin="0,0,4,0" VerticalAlignment="Center"/>
                                <TextBlock Grid.Column="1" Text="Clean" Foreground="Gray" FontSize="11" FontWeight="SemiBold" VerticalAlignment="Center"/>
                                <TextBlock Grid.Column="2" 
                                       Text="{Binding Bonsai.Cleanliness, StringFormat={}{0}%}" 
                                       FontWeight="Bold"
                                       FontSize="11"
                                       Margin="0,0"/>

                                <ProgressBar x:Name="CleanlinessProgressBar"
                                         Grid.ColumnSpan="3"
                                         VerticalAlignment="Bottom"
                                         Value="{Binding Bonsai.Cleanliness}" 
                                         Foreground="#03A9F4" 
                                         Maximum="100" 
                                         Height="6"
                                         Margin="0,18,0,0"/>
                            </Grid>
                        </Border>

                        <!-- Growth Stat -->
                        <Border x:Name="GrowthStatPanel"
                                Margin="0,2" 
                                BorderBrush="#E0E0E0" 
                                BorderThickness="1" 
                                Padding="6">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="ðŸŒ±" FontSize="14" Margin="0,0,4,0" VerticalAlignment="Center"/>
                                <TextBlock Grid.Column="1" Text="Growth" Foreground="Gray" FontSize="11" FontWeight="SemiBold" VerticalAlignment="Center"/>
                                <TextBlock Grid.Column="2" 
                                       Text="{Binding Bonsai.Growth, StringFormat={}{0}%}" 
                                       FontWeight="Bold"
                                       FontSize="11"
                                       Margin="0,0"/>

                                <ProgressBar x:Name="GrowthProgressBar"
                                         Grid.ColumnSpan="3"
                                         VerticalAlignment="Bottom"
                                         Value="{Binding Bonsai.Growth}" 
                                         Foreground="#FFC107" 
                                         Maximum="100" 
                                         Height="6"
                                         Margin="0,18,0,0"/>
                            </Grid>
                        </Border>
                    </UniformGrid>

                    <!-- Multiplier and Streak displays -->
                    <StackPanel Grid.Row="4" Margin="0,5,0,0">
                        <!-- XP Multiplier Display -->
                        <Border Background="#E8F5E9" CornerRadius="4" Padding="6" Margin="0,2,0,2">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="âš¡" FontSize="14" VerticalAlignment="Center" Margin="0,0,6,0"/>
                                <StackPanel Grid.Column="1">
                                    <TextBlock Text="{Binding Bonsai.XPMultiplier, StringFormat=XP Multiplier: {0:P0}}" 
                                           FontWeight="SemiBold" 
                                           FontSize="11"
                                           VerticalAlignment="Center"
                                           Foreground="#673AB7"/>
                                    <!-- Streak Bonus display -->
                                    <TextBlock Text="{Binding Bonsai.StreakBonusText}" 
                                           Foreground="#9C27B0"
                                           FontSize="10"
                                           FontStyle="Italic"/>
                                </StackPanel>
                            </Grid>
                        </Border>

                        <!-- Streak Display -->
                        <Border Background="#E8F5E9" CornerRadius="4" Padding="6" Margin="0,2,0,0">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="ðŸ”¥" FontSize="14" VerticalAlignment="Center" Margin="0,0,6,0"/>
                                <TextBlock Grid.Column="1" 
                                       Text="{Binding Bonsai.ConsecutiveDaysGoodCare, StringFormat=Care Streak: {0} days}" 
                                       FontWeight="SemiBold" 
                                       FontSize="11"
                                       VerticalAlignment="Center"
                                       Foreground="#FF5722"/>
                            </Grid>
                        </Border>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Center column: Bonsai sprite display -->
            <Border Grid.Column="1" 
                    x:Name="BonsaiDisplayArea"
                    Background="White"
                    BorderBrush="#E0E0E0"
                    BorderThickness="1"
                    Margin="6,0">
                <!-- ViewBox to scale the 1024x1024 area to fit the window -->
                <Viewbox Stretch="Uniform" Margin="4">
                    <!-- Main container with fixed aspect ratio -->
                    <Grid Width="1024" Height="1024">
                        <!-- Fallback background color -->
                        <Rectangle Fill="#E8F5E9" Width="1024" Height="1024"/>

                        <!-- Background layer that changes with time of day -->
                        <Image x:Name="BackgroundImage"
                               Source="{Binding CurrentBackgroundImage}"
                               Stretch="Fill"
                               Width="1024" 
                               Height="1024"/>

                        <!-- Bonsai sprite layer -->
                        <Canvas Width="1024" Height="1024">
                            <Image x:Name="BonsaiImage" 
                                   Width="256" 
                                   Height="256"
                                   RenderOptions.BitmapScalingMode="HighQuality"
                                   Canvas.Left="384" 
                                   Canvas.Top="384">
                            </Image>

                            <!-- XP Gain animation container -->
                            <Canvas x:Name="XPGainCanvas" 
                                    Width="1024"
                                    Height="1024"/>

                            <!-- Mood indicator (emoji that changes based on mood state) -->
                            <Border x:Name="MoodIndicator" 
                                    Canvas.Right="100" 
                                    Canvas.Top="100"
                                    Background="White"
                                    BorderBrush="#E0E0E0"
                                    BorderThickness="1"
                                    CornerRadius="20"
                                    Padding="8">
                                <TextBlock x:Name="MoodEmoji" 
                                           Text="ðŸ˜Š" 
                                           FontSize="24"/>
                            </Border>
                        </Canvas>

                        <!-- Level up animation container (hidden by default) -->
                        <Grid x:Name="LevelUpDisplay" 
                              Visibility="Collapsed"
                              Background="#80000000">
                            <Border Background="#FFFFFF"
                                    Padding="20"
                                    BorderBrush="#4CAF50"
                                    BorderThickness="2"
                                    CornerRadius="8">
                                <StackPanel HorizontalAlignment="Center" 
                                            VerticalAlignment="Center">
                                    <TextBlock Text="LEVEL UP!" 
                                               FontSize="32" 
                                               FontWeight="Bold" 
                                               Foreground="#4CAF50" 
                                               HorizontalAlignment="Center"/>
                                    <TextBlock x:Name="NewLevelText" 
                                               Text="Your bonsai reached level 2!" 
                                               FontSize="18" 
                                               Margin="0,10,0,20" 
                                               HorizontalAlignment="Center"/>
                                    <TextBlock x:Name="NewStageText" 
                                               Text="New Stage: Sapling" 
                                               FontSize="18" 
                                               Foreground="#795548" 
                                               HorizontalAlignment="Center"/>
                                    <TextBlock x:Name="LevelUpXPText"
                                               Text="+10% XP gain"
                                               FontSize="16"
                                               Foreground="#9C27B0"
                                               Margin="0,10,0,0"
                                               HorizontalAlignment="Center"/>
                                    <Button Content="Continue" 
                                            Margin="0,20,0,0" 
                                            Padding="20,8" 
                                            Background="#4CAF50"
                                            Foreground="White"
                                            Click="LevelUpContinue_Click"/>
                                </StackPanel>
                            </Border>
                        </Grid>
                    </Grid>
                </Viewbox>
            </Border>

            <!-- Right column: Action buttons and feeding options -->
            <Border Grid.Column="2"
                    Background="#E8F5E9"
                    BorderBrush="#E0E0E0"
                    BorderThickness="1">
                <!-- Action buttons in a grid layout -->
                <Grid Margin="8,5">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <!-- Header -->
                        <RowDefinition Height="Auto"/>
                        <!-- Primary care -->
                        <RowDefinition Height="Auto"/>
                        <!-- Activities -->
                        <RowDefinition Height="Auto"/>
                        <!-- Feeding header -->
                        <RowDefinition Height="*"/>
                        <!-- Feeding options -->
                    </Grid.RowDefinitions>

                    <!-- Header -->
                    <TextBlock Grid.Row="0" 
                               Text="Actions" 
                               FontSize="16" 
                               FontWeight="Bold" 
                               Margin="0,0,0,8" 
                               HorizontalAlignment="Center"/>

                    <!-- Primary Care Buttons - compact layout -->
                    <StackPanel Grid.Row="1">
                        <TextBlock Text="Primary Care" 
                                   FontSize="12" 
                                   FontWeight="SemiBold" 
                                   Margin="0,0,0,4" 
                                   Foreground="#4CAF50"/>

                        <UniformGrid Columns="2" Rows="2">
                            <!-- Water Button -->
                            <Button x:Name="WaterButton"
                                    Background="#4CAF50"
                                    Foreground="White"
                                    Margin="2" 
                                    Height="42"
                                    IsEnabled="{Binding Bonsai.CanWater}"
                                    Click="Water_Click"
                                    ToolTip="Give your bonsai water to keep it hydrated">
                                <StackPanel>
                                    <TextBlock Text="ðŸ’§" FontSize="16" HorizontalAlignment="Center"/>
                                    <TextBlock Text="Water" FontSize="11" FontWeight="SemiBold" HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Button>

                            <!-- Prune Button -->
                            <Button x:Name="PruneButton"
                                    Background="#4CAF50"
                                    Foreground="White" 
                                    Margin="2"
                                    Height="42"
                                    IsEnabled="{Binding Bonsai.CanPrune}"
                                    Click="Prune_Click"
                                    ToolTip="Prune your bonsai to encourage healthy growth">
                                <StackPanel>
                                    <TextBlock Text="âœ‚ï¸" FontSize="16" HorizontalAlignment="Center"/>
                                    <TextBlock Text="Prune" FontSize="11" FontWeight="SemiBold" HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Button>

                            <!-- Rest Button -->
                            <Button x:Name="RestButton"
                                    Background="#4CAF50"
                                    Foreground="White"
                                    Margin="2" 
                                    Height="42"
                                    IsEnabled="{Binding Bonsai.CanRest}"
                                    Click="Rest_Click"
                                    ToolTip="Let your bonsai rest to recover energy">
                                <StackPanel>
                                    <TextBlock Text="ðŸŒ™" FontSize="16" HorizontalAlignment="Center"/>
                                    <TextBlock Text="Rest" FontSize="11" FontWeight="SemiBold" HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Button>

                            <!-- Fertilize Button -->
                            <Button x:Name="FertilizeButton"
                                    Background="#4CAF50"
                                    Foreground="White"
                                    Margin="2" 
                                    Height="42"
                                    IsEnabled="{Binding Bonsai.CanFertilize}"
                                    Click="Fertilize_Click"
                                    ToolTip="Apply fertilizer to boost growth">
