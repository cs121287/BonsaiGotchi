                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="ðŸ’§" FontSize="14" Margin="0,0,4,0" VerticalAlignment="Center"/>
                                <TextBlock Grid.Column="1" Text="Water" Foreground="Gray" FontSize="11" FontWeight="SemiBold" VerticalAlignment="Center"/>
                                <TextBlock Grid.Column="2" 
                                       Text="{Binding Bonsai.Water, StringFormat={}{0}%}" 
                                       FontWeight="Bold"
                                       FontSize="11"
                                       Margin="0,0"/>

                                <ProgressBar x:Name="WaterProgressBar"
                                         Grid.ColumnSpan="3"
                                         VerticalAlignment="Bottom"
                                         Value="{Binding Bonsai.Water}" 
                                         Foreground="#2196F3" 
                                         Maximum="100" 
                                         Height="6"
                                         Margin="0,18,0,0"/>
