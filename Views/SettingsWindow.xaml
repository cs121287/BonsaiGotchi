<Window x:Class="BonsaiGotchiGame.Views.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BonsaiGotchiGame.Views"
        mc:Ignorable="d"
        Title="BonsaiGotchi Settings" 
        Height="350" Width="450"
        WindowStartupLocation="CenterOwner"
        Background="{StaticResource WindowBackgroundBrush}"
        ResizeMode="NoResize">

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" 
                   Text="Game Settings" 
                   FontSize="20" 
                   FontWeight="Bold" 
                   Margin="0,0,0,15"
                   Foreground="{StaticResource ForestGreenBrush}"/>

        <!-- Settings Panel -->
        <Border Grid.Row="1"
                Style="{StaticResource NatureCardStyle}">
            <StackPanel>
                <!-- Auto-save settings -->
                <GroupBox Header="Auto-Save Settings" Margin="0,0,0,10">
                    <StackPanel Margin="10">
                        <CheckBox x:Name="AutoSaveCheckBox" 
                                  Content="Enable auto-save" 
                                  Margin="0,0,0,8"/>

                        <Grid Margin="20,0,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0" 
                                       Text="Auto-save interval: " 
                                       VerticalAlignment="Center"/>
                            <Slider Grid.Column="1" 
                                    x:Name="AutoSaveIntervalSlider" 
                                    Minimum="1" Maximum="30" 
                                    SmallChange="1" LargeChange="5" 
                                    TickFrequency="5" TickPlacement="BottomRight"
                                    IsSnapToTickEnabled="True"
                                    Margin="10,0"/>
                            <TextBlock Grid.Column="2" 
                                       Text="{Binding ElementName=AutoSaveIntervalSlider, Path=Value, StringFormat={}{0:0} minutes}" 
                                       VerticalAlignment="Center" 
                                       MinWidth="70"/>
                        </Grid>
                    </StackPanel>
                </GroupBox>

                <!-- Sound settings -->
                <GroupBox Header="Sound Settings" Margin="0,0,0,10">
                    <StackPanel Margin="10">
                        <CheckBox x:Name="SoundEffectsCheckBox" 
                                  Content="Enable sound effects" 
                                  Margin="0,0,0,8"/>

                        <Grid Margin="20,0,0,8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0" 
                                       Text="Sound volume: " 
                                       VerticalAlignment="Center"/>
                            <Slider Grid.Column="1" 
                                    x:Name="SoundVolumeSlider" 
                                    Minimum="0" Maximum="1" 
                                    SmallChange="0.1" LargeChange="0.2" 
                                    TickFrequency="0.1" TickPlacement="BottomRight"
                                    Margin="10,0"/>
                            <TextBlock Grid.Column="2" 
                                       Text="{Binding ElementName=SoundVolumeSlider, Path=Value, StringFormat={}{0:P0}}" 
                                       VerticalAlignment="Center" 
                                       MinWidth="40"/>
                        </Grid>

                        <CheckBox x:Name="BackgroundMusicCheckBox" 
                                  Content="Enable background music" 
                                  Margin="0,0,0,8"/>

                        <Grid Margin="20,0,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0" 
                                       Text="Music volume: " 
                                       VerticalAlignment="Center"/>
                            <Slider Grid.Column="1" 
                                    x:Name="MusicVolumeSlider" 
                                    Minimum="0" Maximum="1" 
                                    SmallChange="0.1" LargeChange="0.2" 
                                    TickFrequency="0.1" TickPlacement="BottomRight"
                                    Margin="10,0"/>
                            <TextBlock Grid.Column="2" 
                                       Text="{Binding ElementName=MusicVolumeSlider, Path=Value, StringFormat={}{0:P0}}" 
                                       VerticalAlignment="Center" 
                                       MinWidth="40"/>
                        </Grid>
                    </StackPanel>
                </GroupBox>
            </StackPanel>
        </Border>

        <!-- Buttons -->
        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right" 
                    Margin="0,15,0,0">
            <Button Content="Cancel" 
                    Width="80" Height="30" 
                    Margin="0,0,10,0" 
                    Click="CancelButton_Click"
                    Style="{StaticResource NatureSecondaryButtonStyle}"/>
            <Button Content="Save" 
                    Width="80" Height="30" 
                    Click="SaveButton_Click"
                    Style="{StaticResource NatureButtonStyle}"/>
        </StackPanel>
    </Grid>
</Window>