<Window x:Class="BonsaiGotchiGame.Views.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BonsaiGotchiGame.Views"
        mc:Ignorable="d"
        Title="BonsaiGotchi Settings" Height="450" Width="400"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        
        <TextBlock Grid.Row="0" 
                   Text="Settings" 
                   FontSize="20" 
                   FontWeight="Bold"
                   Margin="0,0,0,15"/>
        
        <TabControl Grid.Row="1">
            <TabItem Header="Game">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="10">
                        <!-- Auto Save -->
                        <CheckBox x:Name="AutoSaveCheckBox" 
                                  Content="Auto Save" 
                                  Margin="0,5" />
                        
                        <Grid Margin="20,5,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" 
                                       Text="Auto Save Interval:" 
                                       VerticalAlignment="Center" />
                            <ComboBox Grid.Column="1" 
                                      x:Name="AutoSaveIntervalComboBox" 
                                      Margin="10,0,0,0"
                                      Width="100"
                                      HorizontalAlignment="Left">
                                <ComboBoxItem Content="1 minute" />
                                <ComboBoxItem Content="5 minutes" />
                                <ComboBoxItem Content="10 minutes" />
                                <ComboBoxItem Content="15 minutes" />
                                <ComboBoxItem Content="30 minutes" />
                                <ComboBoxItem Content="60 minutes" />
                            </ComboBox>
                        </Grid>
                        
                        <!-- Time Progression Speed -->
                        <Grid Margin="0,10,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" 
                                       Text="Time Progression:" 
                                       VerticalAlignment="Center" />
                            <ComboBox Grid.Column="1" 
                                      x:Name="TimeProgressionSpeedComboBox" 
                                      Margin="10,0,0,0"
                                      Width="100"
                                      HorizontalAlignment="Left">
                                <ComboBoxItem Content="Normal" />
                                <ComboBoxItem Content="2x Speed" />
                                <ComboBoxItem Content="5x Speed" />
                                <ComboBoxItem Content="10x Speed" />
                            </ComboBox>
                        </Grid>
                        
                        <!-- Show Tips -->
                        <CheckBox x:Name="ShowTipsCheckBox" 
                                  Content="Show Gameplay Tips" 
                                  Margin="0,10,0,5" />
                    </StackPanel>
                </ScrollViewer>
            </TabItem>
            
            <TabItem Header="Audio">
                <StackPanel Margin="10">
                    <!-- Sound Effects -->
                    <CheckBox x:Name="PlaySoundsCheckBox" 
                              Content="Play Sound Effects"
                              Margin="0,5" />
                    
                    <Grid Margin="20,5,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" 
                                   Text="Sound Volume:" 
                                   VerticalAlignment="Center" />
                        <Slider Grid.Column="1" 
                                x:Name="SoundVolumeSlider" 
                                Margin="10,0,0,0"
                                Minimum="0" 
                                Maximum="1" 
                                Value="0.8" 
                                TickFrequency="0.1" 
                                IsSnapToTickEnabled="True" />
                    </Grid>
                    
                    <!-- Background Music -->
                    <CheckBox x:Name="PlayMusicCheckBox" 
                              Content="Play Background Music" 
                              Margin="0,15,0,5" />
                    
                    <Grid Margin="20,5,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" 
                                   Text="Music Volume:" 
                                   VerticalAlignment="Center" />
                        <Slider Grid.Column="1" 
                                x:Name="MusicVolumeSlider" 
                                Margin="10,0,0,0"
                                Minimum="0" 
                                Maximum="1" 
                                Value="0.5" 
                                TickFrequency="0.1" 
                                IsSnapToTickEnabled="True" />
                    </Grid>
                </StackPanel>
            </TabItem>
            
            <TabItem Header="Interface">
                <StackPanel Margin="10">
                    <!-- Theme -->
                    <Grid Margin="0,5,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" 
                                   Text="Theme:" 
                                   VerticalAlignment="Center" />
                        <ComboBox Grid.Column="1" 
                                  x:Name="ThemeComboBox" 
                                  Margin="10,0,0,0"
                                  Width="120"
                                  HorizontalAlignment="Left">
                            <ComboBoxItem Content="Default" />
                            <ComboBoxItem Content="Dark" />
                            <ComboBoxItem Content="Pastel" />
                            <ComboBoxItem Content="Retro" />
                        </ComboBox>
                    </Grid>
                </StackPanel>
            </TabItem>
        </TabControl>
        
        <Grid Grid.Row="2" Margin="0,15,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            
            <Button Grid.Column="0" 
                    Content="Reset to Defaults" 
                    Padding="10,5" 
                    HorizontalAlignment="Left"
                    Click="DefaultsButton_Click" />
            
            <Button Grid.Column="1" 
                    Content="Cancel" 
                    Padding="20,5" 
                    Margin="0,0,10,0"
                    Click="CancelButton_Click" />
            
            <Button Grid.Column="2" 
                    Content="Save" 
                    Padding="20,5" 
                    IsDefault="True"
                    Click="SaveButton_Click" />
        </Grid>
    </Grid>
</Window>