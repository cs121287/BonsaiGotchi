<Window x:Class="BonsaiGotchiGame.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BonsaiGotchiGame"
        xmlns:viewmodels="clr-namespace:BonsaiGotchiGame.ViewModels"
        xmlns:converters="clr-namespace:BonsaiGotchiGame.Converters"
        mc:Ignorable="d"
        Title="BonsaiGotchi" Height="780" Width="1100"
        MinHeight="720" MinWidth="1080"
        WindowStartupLocation="CenterScreen"
        Loaded="Window_Loaded"
        Closed="Window_Closed">

    <Window.Resources>
        <!-- Style for food buttons with inventory count display -->
        <Style x:Key="FoodButtonStyle" TargetType="Button">
            <Setter Property="Margin" Value="2"/>
            <Setter Property="Height" Value="Auto"/>
            <Setter Property="Background" Value="#FFF3E0"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="BorderBrush" Value="#FFB74D"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="1"
                            CornerRadius="4">
                            <Grid>
                                <!-- Main content -->
                                <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>

                                <!-- Inventory count badge -->
                                <Border x:Name="CountBadge"
                                    Background="#4CAF50"
                                    CornerRadius="10"
                                    Padding="4,1"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Bottom"
                                    Margin="0,0,3,3">
                                    <TextBlock Text="{Binding Path=Tag, RelativeSource={RelativeSource TemplatedParent}}" 
                                           Foreground="White"
                                           FontSize="9"
                                           FontWeight="Bold"/>
                                </Border>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <!-- Hide the badge when Tag is null or empty -->
                            <Trigger Property="Tag" Value="{x:Null}">
                                <Setter TargetName="CountBadge" Property="Visibility" Value="Collapsed"/>
                            </Trigger>
                            <Trigger Property="Tag" Value="">
                                <Setter TargetName="CountBadge" Property="Visibility" Value="Collapsed"/>
                            </Trigger>

                            <!-- Button state triggers -->
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FFE0B2"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#FFCC80"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.6"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Header -->
            <RowDefinition Height="*"/>
            <!-- Main content area -->
            <RowDefinition Height="150"/>
            <!-- Journal area -->
        </Grid.RowDefinitions>

        <!-- Top bar with status and clock -->
        <Border Grid.Row="0" 
                x:Name="HeaderBar"
                Background="#4CAF50" 
                Padding="12">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <!-- Status Message -->
                    <ColumnDefinition Width="Auto"/>
                    <!-- Bonsai Bills -->
                    <ColumnDefinition Width="Auto"/>
                    <!-- Game Clock -->
                    <ColumnDefinition Width="Auto"/>
                    <!-- Settings Button -->
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0"
                           x:Name="StatusTextBlock"
                           Text="{Binding StatusMessage}" 
                           Foreground="White"
                           FontSize="14" 
                           FontWeight="SemiBold"
                           TextWrapping="Wrap"
                           VerticalAlignment="Center"/>

                <!-- Bonsai Bills Display -->
                <Border Grid.Column="1" 
                        Background="#388E3C" 
                        CornerRadius="6" 
                        Padding="10,6" 
                        Margin="8,0">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="ðŸ’µ" 
                                   FontSize="16" 
                                   VerticalAlignment="Center" 
                                   Foreground="White"/>
                        <TextBlock x:Name="CurrencyDisplay" 
                                   Text="{Binding Bonsai.Currency.BonsaiBills}" 
                                   FontSize="16" 
                                   FontWeight="Bold" 
                                   Margin="5,0,0,0" 
                                   Foreground="White" 
                                   VerticalAlignment="Center"/>
                    </StackPanel>
                </Border>

                <!-- Game Clock Display -->
                <Border Grid.Column="2" 
                        Background="#388E3C" 
                        CornerRadius="6" 
                        Padding="10,6" 
                        Margin="8,0">
                    <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                        <TextBlock Text="{Binding Bonsai.GameTimeDisplay}" 
                                   Foreground="White"
                                   FontSize="14" 
                                   FontWeight="Bold"
                                   HorizontalAlignment="Center"/>
                        <TextBlock Text="{Binding Bonsai.GameDateDisplay}" 
                                   Foreground="White"
                                   Opacity="0.8"
                                   FontSize="10"
                                   HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>

                <Button Grid.Column="3" 
                        Content="âš™ï¸" 
                        Width="34" 
                        Height="34"
                        Margin="5,0,0,0"
                        Click="Settings_Click"
                        Background="#795548"
                        Foreground="White"
                        BorderThickness="0"
                        ToolTip="Settings"/>
            </Grid>
        </Border>

        <!-- Main content area with 3 columns -->
        <Grid Grid.Row="1" Margin="10,5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"/>
                <!-- Left: Status bars -->
                <ColumnDefinition Width="*"/>
                <!-- Center: Bonsai sprite -->
                <ColumnDefinition Width="220"/>
                <!-- Right: Action buttons -->
            </Grid.ColumnDefinitions>

            <!-- Left column: Status bars in stacked layout -->
            <Border Grid.Column="0"
                    Background="White"
                    BorderBrush="#E0E0E0"
                    BorderThickness="1">
                <!-- Compact status panel with no scrollbar -->
                <Grid Margin="8">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <!-- Name & Level -->
                        <RowDefinition Height="Auto"/>
                        <!-- XP Bar -->
                        <RowDefinition Height="Auto"/>
                        <!-- Mood & Health -->
                        <RowDefinition Height="*"/>
                        <!-- Stats -->
                        <RowDefinition Height="Auto"/>
                        <!-- Multipliers -->
                    </Grid.RowDefinitions>

                    <!-- Bonsai Name and Level -->
                    <StackPanel Grid.Row="0">
                        <TextBlock Text="{Binding Bonsai.Name}" 
                                   FontWeight="Bold"
                                   FontSize="16"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" 
                                       Text="{Binding Bonsai.LevelDisplay}"
                                       Foreground="#4CAF50"
                                       FontWeight="SemiBold"
                                       FontSize="12"/>
                            <TextBlock Grid.Column="1" 
                                       Text="{Binding Bonsai.GrowthStageDisplay, StringFormat=Stage: {0}}"
                                       Foreground="#795548"
                                       FontSize="12"/>
                        </Grid>
                    </StackPanel>

                    <!-- XP Progress Bar -->
                    <Border Grid.Row="1" Margin="0,6,0,6" 
                            BorderBrush="#E0E0E0" 
                            BorderThickness="1" 
                            Padding="6">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <Grid Grid.Row="0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="â­" FontSize="16" Margin="0,0,4,0" VerticalAlignment="Center"/>
                                <TextBlock Grid.Column="1" Text="XP Progress" Foreground="Gray" FontSize="11" FontWeight="SemiBold"/>
                                <TextBlock Grid.Column="2" 
                                       Text="{Binding Bonsai.XPToNextLevel, StringFormat={}{0} XP to Next}" 
                                       FontWeight="Bold"
                                       FontSize="11"
                                       Margin="0,0"/>
                            </Grid>

                            <Grid Grid.Row="1">
                                <Canvas x:Name="XPNotificationCanvas" Height="20" Margin="0,-20,0,0"/>
                                <ProgressBar x:Name="XPProgressBar"
                                         Value="{Binding Bonsai.XPPercentage, Mode=OneWay}" 
                                         Maximum="100"
                                         Foreground="#9C27B0" 
                                         Height="12"
                                         Margin="0,6,0,0"/>
                            </Grid>
                        </Grid>
                    </Border>

                    <!-- Mood and Health Condition in single row -->
                    <Grid Grid.Row="2" Margin="0,0,0,6">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Mood Display -->
                        <Border Grid.Column="0" Background="#F5F5F5" CornerRadius="4" Padding="6" Margin="0,0,2,0">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="ðŸ˜Š" FontSize="16" VerticalAlignment="Center" Margin="0,0,4,0"/>
                                <StackPanel Grid.Column="1">
                                    <TextBlock Text="{Binding Bonsai.MoodDisplay}" FontWeight="SemiBold" FontSize="11"/>
                                    <ProgressBar Value="{Binding Bonsai.Mood}" Maximum="100" Height="6" Margin="0,2,0,0"
                                                 Foreground="#FF9800"/>
                                </StackPanel>
                            </Grid>
                        </Border>

                        <!-- Health Condition Display -->
                        <Border Grid.Column="1" Background="#F5F5F5" CornerRadius="4" Padding="6" Margin="2,0,0,0">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="ðŸ¥" FontSize="16" VerticalAlignment="Center" Margin="0,0,4,0"/>
                                <TextBlock Grid.Column="1" 
                                           Text="{Binding Bonsai.HealthConditionDisplay}" 
                                           FontWeight="SemiBold" 
                                           FontSize="11"
                                           VerticalAlignment="Center"
                                           TextWrapping="Wrap"/>
                            </Grid>
                        </Border>
                    </Grid>

                    <!-- Stats Grid - Compact layout -->
                    <UniformGrid Grid.Row="3" Columns="1" Rows="6">
